<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard - Sarkari Job Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: Arial, sans-serif; 
            background: #f5f5f5; 
            color: #333; 
        }
        
        /* Header */
        .admin-header {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            padding: 20px 0;
            box-shadow: 0 4px 10px rgba(220,53,69,0.3);
        }
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo { font-size: 28px; font-weight: bold; }
        .logout-btn {
            background: rgba(255,255,255,0.2);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 25px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s;
        }
        .logout-btn:hover { background: rgba(255,255,255,0.3); transform: translateY(-2px); }
        
        /* Main Container */
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 30px;
        }
        
        /* Sidebar */
        .sidebar {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            height: fit-content;
            position: sticky;
            top: 100px;
        }
        .nav-item {
            display: block;
            padding: 15px 20px;
            margin-bottom: 10px;
            background: #f8f9fa;
            border-radius: 10px;
            text-decoration: none;
            color: #333;
            font-weight: 500;
            transition: all 0.3s;
            border-left: 4px solid transparent;
        }
        .nav-item:hover, .nav-item.active {
            background: #dc3545;
            color: white;
            border-left-color: white;
            transform: translateX(5px);
        }
        
        /* Content */
        .content { background: white; border-radius: 15px; padding: 30px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); }
        .section-title { 
            font-size: 28px; 
            color: #dc3545; 
            margin-bottom: 25px; 
            text-align: center;
            border-bottom: 3px solid #dc3545;
            padding-bottom: 10px;
        }
        
        /* Add Form */
        .add-form {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 12px;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        label { 
            display: block; 
            font-weight: bold; 
            margin-bottom: 8px; 
            color: #333; 
        }
        input, textarea, select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        input:focus, textarea:focus, select:focus {
            outline: none;
            border-color: #dc3545;
        }
        textarea { resize: vertical; min-height: 100px; }
        .btn {
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }
        .btn-primary {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(220,53,69,0.4); }
        .btn-danger {
            background: #dc3545;
            color: white;
        }
        .btn-danger:hover { background: #c82333; }
        
        /* Jobs Table */
        .table-container {
            overflow-x: auto;
            margin-top: 25px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e9ecef;
        }
        th {
            background: #dc3545;
            color: white;
            font-weight: bold;
            position: sticky;
            top: 0;
        }
        tr:hover { background: #f8f9fa; }
        .status {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
        }
        .status-active { background: #d4edda; color: #155724; }
        .status-expired { background: #f8d7da; color: #721c24; }
        
        /* Tabs */
        .tabs {
            display: flex;
            background: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 25px;
            overflow: hidden;
        }
        .tab-btn {
            flex: 1;
            padding: 15px;
            border: none;
            background: transparent;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
        }
        .tab-btn.active {
            background: #dc3545;
            color: white;
        }
        
        /* Stats */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            padding: 25px;
            border-radius: 15px;
            text-align: center;
        }
        .stat-number { font-size: 36px; font-weight: bold; }
        .stat-label { font-size: 16px; opacity: 0.9; }
        
        /* Mobile Responsive */
        @media (max-width: 768px) {
            .admin-container { grid-template-columns: 1fr; gap: 20px; }
            .sidebar { order: 2; }
            .tabs { flex-direction: column; }
            th, td { padding: 10px 8px; font-size: 14px; }
            .section-title { font-size: 22px; }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <div class="header-content">
            <div class="logo">üî¥ SARKARI JOB PORTAL - ADMIN</div>
            <a href="/admin-logout" class="logout-btn">üö™ Logout</a>
        </div>
    </header>

    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <a href="#" class="nav-item active" onclick="showTab('jobs')">üî• Manage Jobs</a>
            <a href="#" class="nav-item" onclick="showTab('results')">üìã Manage Results</a>
            <a href="#" class="nav-item" onclick="showTab('admit')">üé´ Manage Admit Cards</a>
            <a href="#" class="nav-item" onclick="showTab('stats')">üìä Statistics</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <!-- Stats -->
            <div class="stats-grid" id="statsSection" style="display: none;">
                <div class="stat-card">
                    <div class="stat-number" id="totalJobs">0</div>
                    <div class="stat-label">Total Jobs</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="activeJobs">0</div>
                    <div class="stat-label">Active Jobs</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="todayJobs">0</div>
                    <div class="stat-label">Jobs Today</div>
                </div>
            </div>

            <!-- Tabs -->
            <div class="tabs">
                <button class="tab-btn active" onclick="showTab('jobs')">üî• Jobs</button>
                <button class="tab-btn" onclick="showTab('results')">üìã Results</button>
                <button class="tab-btn" onclick="showTab('admit')">üé´ Admit Cards</button>
            </div>

            <!-- Jobs Section -->
            <div id="jobsSection">
                <h2 class="section-title">‚ûï Add New Job</h2>
                <div class="add-form">
                    <form id="jobForm">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" id="jobTitle" required>
                        </div>
                        <div class="form-group">
                            <label>Category</label>
                            <select id="jobCategory" required>
                                <option value="">Select Category</option>
                                <option value="SSC">SSC</option>
                                <option value="UPSC">UPSC</option>
                                <option value="Railway">Railway</option>
                                <option value="Banking">Banking</option>
                                <option value="Police">Police</option>
                                <option value="Teaching">Teaching</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Last Date</label>
                            <input type="date" id="jobLastDate" required>
                        </div>
                        <div class="form-group">
                            <label>Apply Link</label>
                            <input type="url" id="jobLink" placeholder="https://ssc.nic.in" required>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea id="jobDescription" placeholder="Vacancies, eligibility..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">üöÄ Add Job</button>
                    </form>
                </div>

                <h3 style="color: #666; margin: 30px 0 15px 0;">üìã All Jobs</h3>
                <div class="table-container">
                    <table id="jobsTable">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Last Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="jobsTableBody">
                            <% if (jobs && jobs.length > 0) { %>
                                <% jobs.forEach(job => { %>
                                <tr>
                                    <td><%= job.title %></td>
                                    <td><%= job.category %></td>
                                    <td><%= new Date(job.lastDate).toLocaleDateString('en-IN') %></td>
                                    <td>
                                        <span class="status <%= new Date(job.lastDate) >= new Date() ? 'status-active' : 'status-expired' %>">
                                            <%= new Date(job.lastDate) >= new Date() ? 'Active' : 'Expired' %>
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger" style="padding: 8px 16px; font-size: 14px;" 
                                            onclick="deleteJob('<%= job._id %>')">üóëÔ∏è Delete</button>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="5" style="text-align: center; padding: 50px; color: #666;">No jobs found. Add your first job! üöÄ</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Results Section (Hidden by default) -->
            <div id="resultsSection" style="display: none;">
                <h2 class="section-title">üìã Manage Results</h2>
                <p>Results management coming soon! üî•</p>
            </div>

            <!-- Admit Cards Section -->
            <div id="admitSection" style="display: none;">
                <h2 class="section-title">üé´ Manage Admit Cards</h2>
                <p>Admit cards management coming soon! üî•</p>
            </div>
        </div>
    </div>

    <script>
        let jobs = <%- JSON.stringify(jobs || []) %>;

        // Load jobs on page load
        window.onload = function() {
            updateStats();
            document.getElementById('jobLastDate').valueAsDate = new Date();
        }

        // Tab switching
        function showTab(tab) {
            // Update sidebar
            document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
            event.target.classList.add('active');
            
            // Update tabs
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Show content
            document.querySelectorAll('[id$="Section"]').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(tab + 'Section').style.display = 'block';
            
            if (tab === 'stats') {
                document.getElementById('statsSection').style.display = 'grid';
            }
        }

        // Add Job
        document.getElementById('jobForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const jobData = {
                title: document.getElementById('jobTitle').value,
                category: document.getElementById('jobCategory').value,
                link: document.getElementById('jobLink').value,
                lastDate: document.getElementById('jobLastDate').value,
                description: document.getElementById('jobDescription').value
            };

            try {
                const response = await fetch('/api/jobs', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(jobData)
                });
                
                if (response.ok) {
                    alert('‚úÖ Job added successfully!');
                    location.reload();
                } else {
                    alert('‚ùå Error adding job');
                }
            } catch (err) {
                alert('‚ùå Network error: ' + err.message);
            }
        });

        // Delete Job
        async function deleteJob(id) {
            if (confirm('üóëÔ∏è Delete this job?')) {
                try {
                    const response = await fetch(`/api/jobs/${id}`, { method: 'DELETE' });
                    if (response.ok) {
                        alert('‚úÖ Job deleted!');
                        location.reload();
                    }
                } catch (err) {
                    alert('‚ùå Delete failed');
                }
            }
        }

        // Update Stats
        function updateStats() {
            document.getElementById('totalJobs').textContent = jobs.length;
            const activeJobs = jobs.filter(job => new Date(job.lastDate) >= new Date()).length;
            document.getElementById('activeJobs').textContent = activeJobs;
            const todayJobs = jobs.filter(job => {
                const created = new Date(job.createdAt);
                return created.toDateString() === new Date().toDateString();
            }).length;
            document.getElementById('todayJobs').textContent = todayJobs;
        }
    </script>
</body>
</html>
