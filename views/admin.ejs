<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard - Sarkari Job Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: Arial, sans-serif; 
            background: #f5f5f5; 
            color: #333; 
            line-height: 1.6;
        }
        
        /* Header */
        .admin-header {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            padding: 20px 0;
            box-shadow: 0 4px 15px rgba(220,53,69,0.3);
            position: sticky;
            top: 0;
            z-index: 100;
        }
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo { 
            font-size: 28px; 
            font-weight: bold; 
        }
        .logout-btn {
            background: rgba(255,255,255,0.2);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 25px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s;
        }
        .logout-btn:hover { 
            background: rgba(255,255,255,0.3); 
            transform: translateY(-2px); 
        }
        
        /* Main Layout */
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 30px;
        }
        
        /* Sidebar */
        .sidebar {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            height: fit-content;
            position: sticky;
            top: 120px;
        }
        .nav-item {
            display: block;
            padding: 15px 20px;
            margin-bottom: 10px;
            background: #f8f9fa;
            border-radius: 10px;
            text-decoration: none;
            color: #333;
            font-weight: 500;
            transition: all 0.3s;
            border-left: 4px solid transparent;
        }
        .nav-item:hover, .nav-item.active {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            border-left-color: white;
            transform: translateX(5px);
        }
        
        /* Content */
        .content { 
            background: white; 
            border-radius: 15px; 
            padding: 30px; 
            box-shadow: 0 5px 20px rgba(0,0,0,0.1); 
        }
        .section-title { 
            font-size: 28px; 
            color: #dc3545; 
            margin-bottom: 25px; 
            text-align: center;
            border-bottom: 3px solid #dc3545;
            padding-bottom: 10px;
        }
        
        /* Form */
        .add-form {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            border-top: 4px solid #dc3545;
        }
        .form-group {
            margin-bottom: 25px;
        }
        label { 
            display: block; 
            font-weight: bold; 
            margin-bottom: 8px; 
            color: #2c3e50; 
            font-size: 15px;
        }
        input, textarea, select {
            width: 100%;
            padding: 15px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s;
            font-family: Arial, sans-serif;
        }
        input:focus, textarea:focus, select:focus {
            outline: none;
            border-color: #dc3545;
            box-shadow: 0 0 0 3px rgba(220,53,69,0.1);
        }
        textarea { 
            resize: vertical; 
            min-height: 120px; 
        }
        .btn {
            padding: 15px 35px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
        }
        .btn-primary {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
        }
        .btn-primary:hover { 
            transform: translateY(-3px); 
            box-shadow: 0 10px 25px rgba(220,53,69,0.4); 
        }
        .btn-danger {
            background: #dc3545;
            color: white;
        }
        .btn-danger:hover { 
            background: #c82333; 
            transform: translateY(-2px);
        }
        
        /* Table */
        .table-container {
            overflow-x: auto;
            margin-top: 25px;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }
        th, td {
            padding: 18px 15px;
            text-align: left;
            border-bottom: 1px solid #e9ecef;
        }
        th {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            font-weight: bold;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        tr:hover { 
            background: #f8f9fa; 
        }
        .status {
            padding: 8px 16px;
            border-radius: 25px;
            font-size: 13px;
            font-weight: bold;
        }
        .status-upcoming { 
            background: #d1ecf1; 
            color: #0c5460; 
        }
        .status-passed { 
            background: #f8d7da; 
            color: #721c24; 
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .admin-container { 
                grid-template-columns: 1fr; 
                gap: 20px; 
                padding: 20px 15px; 
            }
            .sidebar { 
                order: 2; 
                position: static; 
            }
            th, td { 
                padding: 12px 10px; 
                font-size: 14px; 
            }
            .section-title { font-size: 24px; }
            .form-group { margin-bottom: 20px; }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <div class="header-content">
            <div class="logo">üî¥ SARKARI JOB PORTAL <span style="font-size: 16px;">ADMIN PANEL</span></div>
            <a href="/admin-logout" class="logout-btn">üö™ Logout</a>
        </div>
    </header>

    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <a href="#" class="nav-item active" onclick="showTab('jobs')">üî• Manage Updates</a>
            <a href="#" class="nav-item" onclick="showTab('stats')">üìä Dashboard Stats</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <!-- Jobs Section (Default) -->
            <div id="jobsSection">
                <h2 class="section-title">‚ûï Add New Update</h2>
                
                <div class="add-form">
                    <form id="jobForm">
                        <div class="form-group">
                            <label>üìù Title <span style="color: #dc3545;">*</span></label>
                            <input type="text" id="jobTitle" placeholder="SSC CGL 2026 Notification" required>
                        </div>
                        
                        <div class="form-group">
                            <label>üè∑Ô∏è Category <span style="color: #dc3545;">*</span></label>
                            <select id="jobCategory" required>
                                <option value="">Select Category</option>
                                <option value="SSC">üìö SSC</option>
                                <option value="UPSC">üë®‚Äçüéì UPSC</option>
                                <option value="Railway">üöÇ Railway</option>
                                <option value="Banking">üè¶ Banking</option>
                                <option value="Police">üëÆ Police</option>
                                <option value="Teaching">üë©‚Äçüè´ Teaching</option>
                                <option value="Result">üìã Result</option>
                                <option value="Admit Card">üé´ Admit Card</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label>üìÖ Important Date <span style="color: #dc3545;">*</span></label>
                            <input type="date" id="jobImpDate" required>
                        </div>
                        
                        <div class="form-group">
                            <label>üîó Primary Link <span style="color: #dc3545;">*</span></label>
                            <input type="url" id="jobPrimaryLink" placeholder="https://ssc.nic.in" required>
                        </div>
                        
                        <div class="form-group">
                            <label>üîó Secondary Link Name</label>
                            <input type="text" id="jobSecondaryName" placeholder="Notification PDF / Result PDF">
                        </div>
                        
                        <div class="form-group">
                            <label>üîó Secondary Link URL</label>
                            <input type="url" id="jobSecondaryLink" placeholder="https://ssc.nic.in/notification.pdf">
                        </div>
                        
                        <div class="form-group">
                            <label>üìÑ Description</label>
                            <textarea id="jobDescription" placeholder="Vacancies: 10,000+&#10;Eligibility: Graduate&#10;Age: 18-30&#10;Location: Delhi NCR"></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">üöÄ Add Update Now</button>
                    </form>
                </div>

                <h3 style="color: #2c3e50; margin: 35px 0 20px 0; font-size: 22px;">üìã All Updates (Total: <span id="totalCount">0</span>)</h3>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th style="width: 30%;">Title</th>
                                <th style="width: 12%;">Category</th>
                                <th style="width: 15%;">Imp. Date</th>
                                <th style="width: 20%;">Primary Link</th>
                                <th style="width: 12%;">Status</th>
                                <th style="width: 11%;">Action</th>
                            </tr>
                        </thead>
                        <tbody id="jobsTableBody">
                            <% if (jobs && jobs.length > 0) { %>
                                <% jobs.forEach(job => { %>
                                <tr>
                                    <td style="font-weight: 500;"><%= job.title %></td>
                                    <td>
                                        <span style="background: #e3f2fd; padding: 4px 10px; border-radius: 15px; font-size: 13px;">
                                            <%= job.category %>
                                        </span>
                                    </td>
                                    <td><%= new Date(job.impDate).toLocaleDateString('en-IN') %></td>
                                    <td>
                                        <a href="<%= job.primaryLink %>" target="_blank" style="color: #dc3545; font-size: 14px;">
                                            <%= job.primaryLink.slice(0,25) %>...
                                        </a>
                                    </td>
                                    <td>
                                        <span class="status <%= new Date(job.impDate) > new Date() ? 'status-upcoming' : 'status-passed' %>">
                                            <%= new Date(job.impDate) > new Date() ? 'Upcoming' : 'Passed' %>
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger" style="padding: 10px 18px; font-size: 14px;" 
                                            onclick="deleteJob('<%= job._id %>')">üóëÔ∏è Delete</button>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="text-align: center; padding: 60px; color: #666; font-style: italic;">
                                        üìù No updates found. Add your first update above! üöÄ
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        let allJobs = <%- JSON.stringify(jobs || []) %>;

        // Set today's date as default
        window.onload = function() {
            document.getElementById('jobImpDate').valueAsDate = new Date();
            document.getElementById('totalCount').textContent = allJobs.length;
        }

        // Add new update
        document.getElementById('jobForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = {
                title: document.getElementById('jobTitle').value,
                category: document.getElementById('jobCategory').value,
                impDate: document.getElementById('jobImpDate').value,
                primaryLink: document.getElementById('jobPrimaryLink').value,
                secondaryLinkName: document.getElementById('jobSecondaryName').value,
                secondaryLink: document.getElementById('jobSecondaryLink').value,
                description: document.getElementById('jobDescription').value
            };

            // Validation
            if (!formData.title || !formData.category || !formData.impDate || !formData.primaryLink) {
                alert('‚ùå Please fill all required fields (marked with *)');
                return;
            }

            try {
                const response = await fetch('/api/jobs', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('‚úÖ Update added successfully! üî¥');
                    location.reload();
                } else {
                    alert('‚ùå Error: ' + (result.error || 'Failed to add update'));
                }
            } catch (error) {
                alert('‚ùå Network error. Check MongoDB connection.');
                console.error('Error:', error);
            }
        });

        // Delete update
        async function deleteJob(id) {
            if (confirm('üóëÔ∏è Are you sure you want to delete this update?')) {
                try {
                    const response = await fetch(`/api/jobs/${id}`, { 
                        method: 'DELETE' 
                    });
                    
                    const result = await response.json();
                    if (result.success) {
                        alert('‚úÖ Update deleted successfully!');
                        location.reload();
                    } else {
                        alert('‚ùå Delete failed');
                    }
                } catch (error) {
                    alert('‚ùå Network error');
                }
            }
        }
    </script>
</body>
</html>
