    <script>
        // Mobile hamburger menu
        function toggleMenu() {
            const nav = document.getElementById('navMenu');
            nav.classList.toggle('active');
        }

        // Close menu on link click (mobile)
        document.querySelectorAll('.header-nav a').forEach(link => {
            link.addEventListener('click', () => {
                document.getElementById('navMenu').classList.remove('active');
            });
        });

        // Search functionality
        document.querySelector('.search-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const query = this.value.trim();
                if (query) {
                    alert(`üîç Searching for "${query}" Govt Jobs...\n\n‚úÖ Feature coming soon!\nüí° Try: SSC CGL, UPSC CSE, Railway NTPC, Delhi Police`);
                    this.value = '';
                }
            }
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
                // Close mobile menu
                document.getElementById('navMenu').classList.remove('active');
            });
        });

        // Category click handlers
        document.querySelectorAll('.category-card').forEach((card, index) => {
            card.style.transitionDelay = `${index * 0.1}s`;
            card.addEventListener('click', function(e) {
                e.preventDefault();
                const category = this.querySelector('h3').textContent;
                alert(`üìÇ Showing ${category} jobs...\n\n‚úÖ Category filter coming soon!\nüí° Check back daily for new jobs! üöÄ`);
            });
        });

        // Scroll animations
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('animate');
                    }, index * 100);
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.job-card, .category-card').forEach(el => {
            observer.observe(el);
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.header');
            if (window.scrollY > 100) {
                header.style.background = 'linear-gradient(135deg, rgba(220,53,69,0.95) 0%, rgba(200,35,51,0.95) 100%)';
                header.style.backdropFilter = 'blur(10px)';
            } else {
                header.style.background = 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)';
                header.style.backdropFilter = 'none';
            }
        });

        // Prevent zoom on iOS inputs
        document.querySelector('.search-input').addEventListener('focus', function() {
            if (/iPad|iPhone|iPod/.test(navigator.userAgent)) {
                this.setAttribute('inputmode', 'search');
            }
        });
    </script>
</body>
</html>
